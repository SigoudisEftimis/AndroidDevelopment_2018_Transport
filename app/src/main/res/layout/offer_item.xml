<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <ImageView
        android:id="@+id/companyImage"
        android:layout_width="@dimen/d_value"
        android:layout_height="@dimen/d_value"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/com_facebook_likeview_internal_padding"
        android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_caret_width"
        android:layout_marginTop="@dimen/com_facebook_likeboxcountview_text_padding"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_value_small_3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_value_small"
            android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_text_padding"
            android:layout_marginTop="@dimen/place_autocomplete_powered_by_google_start"
            android:fontFamily="serif-monospace"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/logoTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_text_padding"
            android:layout_marginTop="@dimen/com_facebook_likeview_internal_padding"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_caret_width"
            android:layout_marginTop="@dimen/com_facebook_likeview_text_size"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Total Cost  : " />

            <TextView
                android:id="@+id/price"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_text_size"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="$"
                android:textColor="@color/com_facebook_blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/com_facebook_likeview_internal_padding"
            android:layout_marginLeft="@dimen/com_facebook_likeboxcountview_caret_width"
            android:layout_marginTop="@dimen/com_facebook_likeview_text_size"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dadda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:text="Phone number : " />

            <TextView
                android:id="@+id/phone"
                android:layout_width="@dimen/d_value"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:textColor="@color/com_facebook_button_background_color_selected"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>